<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notif_item_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#f7f7f7"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/notif_item_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:text="School name"
            android:textColor="@color/font_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/notification_line_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#ddd"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_item_username"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="Notification title"
                android:textColor="@color/font_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notif_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="December 10, 2019"
                android:layout_gravity="center_vertical"
                android:textColor="@color/green" />
        </LinearLayout>

        <TextView
            android:id="@+id/notif_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="Notification Content goes hereâ€¦" />
    </LinearLayout>
</androidx.cardview.widget.CardView>