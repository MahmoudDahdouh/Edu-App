<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/activity_item_image"

        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_graduation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/activity_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduation Project"
            android:textColor="@color/font_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_item_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Schools, Chemistry class " />
    </LinearLayout>
</LinearLayout>